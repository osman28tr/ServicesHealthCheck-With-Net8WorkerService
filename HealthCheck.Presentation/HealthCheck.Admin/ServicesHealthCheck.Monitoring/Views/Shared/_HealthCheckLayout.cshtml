@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_HealthCheckLayout</title>
    <style>
        .navbar-nav .nav-link {
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-success">
            <a class="navbar-brand" asp-action="Index" asp-controller="HealthCheck">HealthCheck</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HealthCheckVisualization" asp-action="Index">Graphics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="HealthCheck" asp-action="ErrorMessages">ErrorMessages</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()
    </body>
</html>
